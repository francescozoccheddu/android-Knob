<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <declare-styleable name="KnobView">
        <attr name="minValue" format="float"/>
        <attr name="maxValue" format="float"/>
        <attr name="value" format="float"/>
        <attr name="step" format="float"/>
        <attr name="snap" format="boolean"/>
        <attr name="smoothness" format="float"/>
        <attr name="thickness" format="dimension"/>
        <attr name="revolutionValue" format="float"/>
        <attr name="minValidValue" format="float"/>
        <attr name="maxValidValue" format="float"/>
        <attr name="revolutionsThickness" format="dimension"/>
        <attr name="clickable" format="boolean"/>
        <attr name="trackColor" format="color"/>
        <attr name="labelColor" format="color"/>
        <attr name="labelSize" format="dimension"/>
        <attr name="labelStyle" format="flags">
            <flag name="normal" value="1"/>
            <flag name="bold" value="2"/>
            <flag name="italic" value="4"/>
        </attr>
        <attr name="labelFont" format="string"/>
    </declare-styleable>
</resources>